<ReportPage>:
    name: "reporthub"
    md_bg_color: 21/255, 27/255, 48/255, 1
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            height: dp(48)
            size_hint_y: None
            md_bg_color: 16/255, 17/255, 24/255, 1
            title: "Report Hub"
            anchor_x: "left"
            left_action_items: [["arrow-left", root.return_home]]
        
        MDScrollView:
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(20)
                padding: dp(20)
                adaptive_height: True
                
                # Welcome Card
                MDCard:
                    md_bg_color: 16/255, 17/255, 24/255, 1
                    radius: [15, 15, 15, 15]
                    size_hint_y: None
                    height: dp(100)
                    padding: dp(20)
                    MDBoxLayout:
                        orientation: "vertical"
                        MDLabel:
                            text: "Welcome to the Report Hub"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            font_style: "H5"
                            bold: True
                        MDLabel:
                            text: "Report suspicious activities and get help"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: 0.8, 0.8, 0.8, 1
                            font_style: "Body1"

                # Action Fraud Contact Card
                MDCard:
                    md_bg_color: 24/255, 43/255, 62/255, 1
                    radius: [15, 15, 15, 15]
                    size_hint_y: None
                    height: dp(140)
                    padding: dp(20)
                    MDBoxLayout:
                        orientation: "vertical"
                        spacing: dp(10)
                        AnchorLayout:
                            anchor_x: "center"
                            size_hint_y: None
                            height: dp(40)
                            MDIcon:
                                icon: "phone"
                                theme_text_color: "Custom"
                                text_color: 0.2, 0.8, 0.4, 1
                                font_size: dp(32)
                        MDLabel:
                            text: "Contact Action Fraud"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            font_style: "H6"
                            bold: True
                        MDLabel:
                            text: "0300 123 2040"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: 0.2, 0.8, 0.4, 1
                            font_style: "H5"
                            bold: True

                # Quick Actions Card
                MDCard:
                    md_bg_color: 16/255, 17/255, 24/255, 1
                    radius: [15, 15, 15, 15]
                    size_hint_y: None
                    height: dp(200)
                    padding: dp(20)
                    MDBoxLayout:
                        orientation: "vertical"
                        spacing: dp(15)
                        MDLabel:
                            text: "Quick Actions"
                            halign: "left"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            font_style: "H6"
                            bold: True
                        
                        MDGridLayout:
                            cols: 2
                            spacing: dp(10)
                            adaptive_height: True
                            size_hint_y: None
                            height: self.minimum_height
                            
                            QuickActionButton:
                                icon: "alert-circle"
                                text: "Report Scam"
                            QuickActionButton:
                                icon: "shield-alert"
                                text: "Fraud Alert"
                            QuickActionButton:
                                icon: "email-alert"
                                text: "Phishing Email"
                            QuickActionButton:
                                icon: "web"
                                text: "Fake Website"

                # Emergency Info Card
                MDCard:
                    md_bg_color: 139/255, 69/255, 19/255, 0.2
                    outline_color: 255/255, 140/255, 0/255, 1
                    outline_width: 1
                    radius: [15, 15, 15, 15]
                    size_hint_y: None
                    height: dp(120)
                    padding: dp(20)
                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: dp(15)
                        MDIcon:
                            icon: "alert"
                            theme_text_color: "Custom"
                            text_color: 1, 0.6, 0, 1
                            font_size: dp(40)
                            size_hint_x: None
                            width: dp(50)
                        MDBoxLayout:
                            orientation: "vertical"
                            MDLabel:
                                text: "Emergency?"
                                theme_text_color: "Custom"
                                text_color: 1, 0.6, 0, 1
                                font_style: "H6"
                                bold: True
                            MDLabel:
                                text: "If you're in immediate danger or have been a victim of fraud, call 999 or your local police immediately."
                                theme_text_color: "Custom"
                                text_color: 1, 1, 1, 1
                                font_style: "Body2"
                                text_size: self.width, None

<QuickActionButton@MDCard>:
    md_bg_color: 24/255, 43/255, 62/255, 1
    size_hint: 1, None
    height: dp(60)
    radius: [10, 10, 10, 10]
    ripple_behavior: True
    focusable: True
    icon: ""
    text: ""
    MDBoxLayout:
        orientation: "horizontal"
        spacing: dp(10)
        padding: dp(15)
        MDIcon:
            icon: root.icon
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: dp(24)
            size_hint_x: None
            width: dp(30)
        MDLabel:
            text: root.text
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_style: "Body1"