<HomePage>:
    name: "home"
    md_bg_color: 21/255, 27/255, 48/255, 1
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            height: dp(48)
            size_hint_y: None
            md_bg_color: 21/255, 27/255, 48/255, 1
            title: "Home Page"

        MDCard:
            md_bg_color: 16/255, 17/255, 24/255, 1
            radius: [0,0,0,0]
            spacing: dp(15)
            AnchorLayout:
                anchor_x: "left"
                anchor_y: "top"
                MDIcon:
                    icon: "information"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    font_size: dp(24)
                MDLabel:
                    text: root.tip_text
                    padding: [dp(10), 0, dp(10), 0]
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    font_style: "H6"
                    anchor_x: "left"
                    anchor_y: "top"
        # Main Button Grid
        MDGridLayout:
            cols: 2
            spacing: dp(10)
            padding: dp(5)
            adaptive_height: True
            size_hint_y: None
            height: self.minimum_height
            ElementButton:
                icon: "shield-alert"
                text: "Report"
                on_release: app.root.current = "reporthub" 
            ElementButton:
                icon: "clipboard-text"
                text: "Quiz"
            ElementButton:
                icon: "shield-check"
                text: "Scam Detector"
            ElementButton:
                icon: "book-open-page-variant"
                text: "Education Hub"
        # Centered Settings Button
        AnchorLayout:
            anchor_x: "center"
            size_hint_y: None
            height: dp(120)
            ElementButton:
                icon: "cog"
                text: "Settings"
                size_hint_x: None
                width: dp(160)
        # Bottom Gap
        Widget:
            size_hint_y: None
            height: dp(10)

<ElementButton@MDCard>:
    md_bg_color: 24/255, 43/255, 62/255, 1
    size_hint: 1, None
    height: dp(120)
    radius: [20, 20, 20, 20]
    ripple_behavior: True
    focusable: True
    icon: ""
    text: ""
    MDBoxLayout:
        orientation: "vertical"
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            MDIcon:
                icon: root.icon
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                font_size: dp(36)
        MDLabel:
            text: root.text
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1